{
  "name": "rationalize.css",
  "version": "4.0.0",
  "description": "Opinionated additions to Normalize.",
  "main": "index.css",
  "author": "Ivan NikoliÄ‡ <niksy5@gmail.com> (http://ivannikolic.com)",
  "license": "MIT",
  "style": "index.css",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "eslint '{test/**/*}.js' && stylelint '{index.css,test/**/*.css}'",
    "test": "npm run lint && npm run test:integration",
    "test:integration": "gulp test:prepare && wdio",
    "test:integration:local": "eval \"$(docker-machine env dev)\" && gulp test:prepare && wdio --local --host $(docker-machine ip dev)",
    "test:integration:local:watch": "eval \"$(docker-machine env dev)\" && gulp test:prepare --watch | wdio --local --host $(docker-machine ip dev) --watch",
    "test:manual:local": "gulp test:local:manual --watch"
  },
  "dependencies": {
    "normalize.css": "^6.0.0",
    "opinionate.css": "^1.0.0"
  },
  "devDependencies": {
    "@niksy/babayaga": "^0.1.1",
    "del": "^2.2.0",
    "eslint": "^3.1.1",
    "eslint-config-niksy": "^3.0.1",
    "execa": "^0.4.0",
    "globby": "^4.1.0",
    "gulp": "^3.9.1",
    "gulp-debug": "^2.1.2",
    "gulp-nunjucks-render": "^2.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.4.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-util": "^3.0.7",
    "http-shutdown": "^1.0.3",
    "local-web-server": "^1.2.4",
    "minimist": "^1.2.0",
    "mocha": "^3.1.2",
    "opn": "^4.0.2",
    "postcss-import": "^9.1.0",
    "stylelint": "^7.0.3",
    "stylelint-config-niksy": "^3.0.1",
    "suitcss-components-test": "^1.0.0",
    "wdio-browserstack-service": "^0.1.3",
    "wdio-mocha-framework": "^0.5.4",
    "wdio-spec-reporter": "^0.0.2",
    "webdriverio": "^4.0.9"
  },
  "engines": {
    "node": ">=4"
  },
  "keywords": [
    "css",
    "normalize",
    "rationalize"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niksy/rationalize.css.git"
