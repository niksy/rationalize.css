{
  "name": "rationalize.css",
  "version": "4.0.0",
  "description": "Opinionated additions to Normalize.",
  "main": "index.css",
  "author": "Ivan NikoliÄ‡ <niksy5@gmail.com> (http://ivannikolic.com)",
  "license": "MIT",
  "files": [
    "index.css",
    "start.css",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "style": "index.css",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "stylelint '{index,start}.css'",
    "release": "np",
    "test": "npm run lint && npm run test:integration",
    "test:generate-static-site": "webpack --config ./test/manual/webpack.config.js",
    "test:generate-static-site:watch": "webpack-dev-server --config ./test/manual/webpack.config.js",
    "test:integration": "npm run test:generate-static-site && npx -n=--require -n=esm wdio",
    "test:integration:watch": "npm run test:generate-static-site:watch & npx -n=--require -n=esm wdio --local",
    "test:manual": "npm run test:generate-static-site:watch",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "devDependencies": {
    "changelog-verify": "^1.1.2",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "del": "^2.2.0",
    "eslint": "^5.4.0",
    "eslint-config-niksy": "^6.1.0",
    "eslint-plugin-extend": "^0.1.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-mocha": "^5.1.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-unicorn": "^5.0.0",
    "esm": "^3.0.51",
    "globby": "^4.1.0",
    "html-webpack-plugin": "^3.2.0",
    "http-shutdown": "^1.0.3",
    "local-web-server": "^1.2.4",
    "mini-css-extract-plugin": "^0.5.0",
    "mocha": "^4.1.0",
    "normalize.css": "^7.0.0",
    "np": "^3.0.4",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^3.0.0",
    "stylelint": "^9.2.1",
    "stylelint-config-niksy": "^5.1.1",
    "suitcss-components-test": "^1.0.0",
    "version-changelog": "^3.1.1",
    "wdio-browserstack-service": "^0.1.16",
    "wdio-docker-service": "^1.3.0",
    "wdio-mocha-framework": "^0.5.13",
    "wdio-spec-reporter": "^0.1.4",
    "webdriverio": "^4.12.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "css",
    "normalize",
    "rationalize"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niksy/rationalize.css.git"
  },
  "bugs": {
    "url": "https://github.com/niksy/rationalize.css/issues"
  },
  "homepage": "https://github.com/niksy/rationalize.css#readme"
}
